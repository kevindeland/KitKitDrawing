<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/drawingpad_background">

    <com.enuma.drawingcoloring.view.ViewGleaphDisplay
        android:id="@+id/v_gleaph_1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_color_0"/>

    <Button
        android:id="@+id/v_choose_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ME"
        app:layout_constraintTop_toBottomOf="@id/v_gleaph_1"
        app:layout_constraintLeft_toLeftOf="@id/v_gleaph_1"
        app:layout_constraintRight_toRightOf="@id/v_gleaph_1"
        android:visibility="invisible"
        />

    <com.enuma.drawingcoloring.view.ViewGleaphDisplay
        android:id="@+id/v_gleaph_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf="@id/v_gleaph_1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_color_0"/>
    <Button
        android:id="@+id/v_choose_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ME"
        app:layout_constraintTop_toBottomOf="@id/v_gleaph_2"
        app:layout_constraintLeft_toLeftOf="@id/v_gleaph_2"
        app:layout_constraintRight_toRightOf="@id/v_gleaph_2"
        android:visibility="invisible"
        />

    <com.enuma.drawingcoloring.view.ViewGleaphDisplay
        android:id="@+id/v_gleaph_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf="@id/v_gleaph_2"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_color_0"/>
    <Button
        android:id="@+id/v_choose_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ME"
        app:layout_constraintTop_toBottomOf="@id/v_gleaph_3"
        app:layout_constraintLeft_toLeftOf="@id/v_gleaph_3"
        app:layout_constraintRight_toRightOf="@id/v_gleaph_3"
        android:visibility="invisible"
        />

    <com.enuma.drawingcoloring.view.ViewGleaphDisplay
        android:id="@+id/v_gleaph_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toRightOf="@id/v_gleaph_3"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/bg_color_0"/>
    <Button
        android:id="@+id/v_choose_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOOSE ME"
        app:layout_constraintTop_toBottomOf="@id/v_gleaph_4"
        app:layout_constraintLeft_toLeftOf="@id/v_gleaph_4"
        app:layout_constraintRight_toRightOf="@id/v_gleaph_4"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/v_load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"
        android:text="LOAD ME"
        />
</android.support.constraint.ConstraintLayout>